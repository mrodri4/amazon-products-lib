# Stop the editor from looking for .editorconfig files in the parent directories
root = true

# For any property, a value of unset is to remove the effect of that property,
# even if it has been set before. For example, add indent_size = unset to
# undefine indent_size property (and use editor default).

[*]

######################################################################
# Non-configurable Prettier behaviors
######################################################################

##
# File character encoding (See Character Set Support
# https://github.com/editorconfig/editorconfig/wiki/Character-Set-Support).
#
# Possible Values:
# - latin1
# - utf-8
# - utf-16be
# - utf-16le
# - utf-8-bom
#
charset = utf-8

##
# Denotes whether file should end with a newline.
#
# Possible Values:
# - true
# - false
#
# Caveat: Prettier wonâ€™t trim trailing whitespace inside template strings,
# but your editor might.
#
insert_final_newline = true

##
# Denotes whether whitespace is removed from the end of lines.
#
# Possible Values:
# - true: remove any whitespace characters preceding newline characters
# - false: ensure the editor keeps whitespace characters
#
trim_trailing_whitespace = true

######################################################################
# Configurable Prettier behaviors
# (change these if your Prettier config differs)
######################################################################

# ##
# # **OVERRIDEN BY PRETTIER "useTabs" PROPERTY.**
# #
# # Indentation Style.
# #
# # Posible values:
# # - tab
# # - space
# #
# # Supported By:
# #
# # - all plugins
# #
# indent_style = space

# ##
# # **OVERRIDEN BY PRETTIER "tabWidth" PROPERTY.**
# #
# # Indentation Size (in single-spaced characters).
# #
# # Possible Values:
# # - an integer
# # - tab
# #
# # If indent_size equals to tab, the indent_size will be set to the tab size,
# # which should be tab_width if tab_width is specified, or the tab size set by
# # editor if tab_width is not specified.
# #
# # Supported By:
# # - all plugins
# #
# indent_size = 2

# ##
# # **OVERRIDEN BY PRETTIER "tabWidth" PROPERTY.**
# #
# # Width of a single tabstop character.
# #
# # Possible Values:
# # - a positive integer (defaults indent_size when indent_size is a number)
# #
# # Supported By:
# # - all plugins
# #
# tab_width = 2

# ##
# # **OVERRIDEN BY PRETTIER "endOfLine" PROPERTY.**
# #
# # Line ending file format (Unix, DOS, Mac).
# #
# # NOTE: if you want to use native line endings between different operating
# # systems it is better not to set this option and leave that task to the VCS!
# # In the future we might add a value like native for this scenario
# # (cf https://github.com/editorconfig/editorconfig/issues/226).
# #
# # Possible Values:
# # - lf
# # - crlf
# # - cr
# #
# # Supported By:
# # - all plugins
# #
# end_of_line = lf

# ##
# # **OVERRIDEN BY PRETTIER "printWidth" PROPERTY.**
# #
# # Forces hard line wrapping after the amount of characters specified. off to
# # turn off this feature (use the editor settings).
# #
# # Possible Values:
# # - positive integers
# # - off
# #
# # Supported By:
# #
# # - Emacs
# # - Vim
# # - Atom
# # - ReSharper and Rider
# # - AppCode, IntelliJ IDEA, PhpStorm, PyCharm, RubyMine, and WebStorm
# # - Kakoune
# # - Prettier
# #
# max_line_length = 80

